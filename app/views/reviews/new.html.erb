<h2>add review</h2>
<%= form_for ([@review]) do |f| %>
    <div class="field">
      <%= f.label :customer_name %><br/>
      <%= f.text_field :customer_name %>
    </div>
    <div class="field">
      <%= f.label :content %><br/>
      <%= f.text_area :content %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>